local Players = game:GetService("Players")
local HttpService = game:GetService("HttpService")
local MarketplaceService = game:GetService("MarketplaceService")

local localPlayer = Players.LocalPlayer or Players:GetPlayers()[1]
local username = localPlayer.Name
local userId = localPlayer.UserId
local jobId = game.JobId
local gameId = tostring(game.GameId)
local placeId = game.PlaceId

-- Get avatar URL
local avatarUrl = string.format(
    "https://www.roblox.com/headshot-thumbnail/image?userId=%s&width=150&height=150&format=png",
    userId
)

-- Get game name safely
local gameName = "Unknown Game"
local success, info = pcall(function()
    return MarketplaceService:GetProductInfo(placeId)
end)

if success and info and info.Name then
    gameName = info.Name
end

-- Build data payload to send to webhook
local data = {
    userId = userId,
    username = username,
    avatarUrl = avatarUrl,
    placeId = placeId,
    gameId = gameId,
    gameName = gameName,
    jobId = jobId,
    timestamp = os.time() -- UNIX timestamp for easier backend use
}

local jsonData = HttpService:JSONEncode(data)

-- Your webhook or API endpoint
local url = "https://your_webhook_or_api_here"

-- Send data
local sendSuccess, response = pcall(function()
    return http_request({
        Url = url,
        Method = "POST",
        Headers = {
            ["Content-Type"] = "application/json"
        },
        Body = jsonData
    })
end)

-- Response handling
if sendSuccess then
    print("✅ Script data sent successfully!")
else
    warn("❌ Failed to send data. Notify Jack. Error:", response)
end
